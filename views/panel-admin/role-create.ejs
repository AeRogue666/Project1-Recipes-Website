<%- include('../partials/header') %>

<main>
    <%- include('../panel/burger') %>
    <form class="top-section" action="" method="post">
        <legend class="title">Créer un rôle</legend>
        <fieldset class="left-section margin1rem">
            <% for (const form of Object.values(rolesFormList)) { %>
            <label class="label-form" for="input-<%= form.id %>">
                <h3><%= form.title %></h3>
                <p>(<%= form.subtitle %>)</p>
                <input class="label-form-input" id="input<%= form.id %>" type="<%= form.type %>" name="<%= form.name %>" autocomplete="off" autocapitalize="off">
            </label>
            <% }; %>
        </fieldset>
        <fieldset class="right-section margin1rem">
            <button class="update-btn-form ctg-btn-form" type="submit" name="submit-new-role" id="submitnewrole">Envoyer</button>
        </fieldset>
    </form>
</main>

<%- include('../partials/footer') %>